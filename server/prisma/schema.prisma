generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id    String     @id
  username  String
  Avatar String
  messages Message[]
}
model Message {
  id String @id
  authorId String
  content String
  createdAt DateTime @default(now()) 
  author   User   @relation(fields: [authorId], references: [id]) 
}